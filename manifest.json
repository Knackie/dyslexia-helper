{
  "manifest_version": 3,
  "name": "Correcteur Dyslexique OpenAI",
  "version": "1.0",
  "description": "Corrige les fautes de frappe et de grammaire dans les zones de texte via OpenAI API.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
